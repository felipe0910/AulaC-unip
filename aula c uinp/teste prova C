#include <stdio.h>
#include <math.h>

int main() {

float base;
float altura;

printf("digite base do triangulo:");
scanf("%f",&base);

printf("altura do triangulo:");
scanf("%f",&altura);

float resultado=(base*altura)/2;
printf("%f area do triangulo equilatero", resultado);


return 0;
}
